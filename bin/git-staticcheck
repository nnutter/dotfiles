#!/usr/bin/env bash

set -o errexit -o nounset -o pipefail

main() {
    local DIFF_ARGS=("HEAD^..")
    if test "$#" -gt 0
    then
        DIFF_ARGS=("$@")
    fi

    local DIFF=()
    DIFF=("$(git diff --name-only "${DIFF_ARGS[@]}" | grep '\.go$'; if test $? -gt 1; then exit $?; fi)")
    DIFF_EXIT=$?
    if test $DIFF_EXIT -gt 1
    then
        exit $DIFF_EXIT
    fi

    if test "${#DIFF[@]}" -eq 0
    then
        exit 0
    fi

    echo "${DIFF[@]}" \
        | xargs staticcheck
}

main "$@"
