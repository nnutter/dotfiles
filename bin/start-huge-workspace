#!/usr/bin/env bash

set -o errexit
set -o pipefail

if [[ -n "$1" ]]; then
    MOJO_MODE="$1"
else
    MOJO_MODE="stage"
fi

if ! git rev-parse --is-inside-work-tree 2> /dev/null; then
    exit 1
fi

set -o nounset

HUGE_WORK_TREE=$(git rev-parse --show-toplevel)

tmux split-window -bv -l 4

tmux split-window -h -p 50

tmux select-pane -t 0

sleep 1

tmux send-keys -t 1 "cd \"${HUGE_WORK_TREE}\"" Enter
tmux send-keys -t 2 "MOJO_MODE=${MOJO_MODE} start_dev_containers -s postgres -s elasticsearch setup-django-huge" Enter

while ! tmux capture-pane -p -t 1 -S - | tail -n 1 | grep -q '^\$'; do
    sleep 0.5
done
tmux send-keys -t 1 "dev -m ${MOJO_MODE} servers" Enter

while ! tmux capture-pane -p -t 2 -S - | grep -q ^HUGE_DJANGO_DB_URL; do
    sleep 0.5
done
tmux send-keys -t 0 'C-u' " export $(tmux capture-pane -p -t 2 -S - | grep ^HUGE_DJANGO_DB_URL)" Enter

while ! tmux capture-pane -p -t 2 -S - | grep -q ^HUGE_ELASTICSEARCH_URL; do
    sleep 0.5
done
tmux send-keys -t 0 'C-u' " export $(tmux capture-pane -p -t 2 -S - | grep ^HUGE_ELASTICSEARCH_URL)" Enter

( sleep 1; tmux send-keys -t 0 'C-u' " MOJO_MODE=${MOJO_MODE} source '$(git rev-parse --show-toplevel)/python/env.sh'" Enter )&
