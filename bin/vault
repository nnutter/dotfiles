#!/usr/bin/env bash

# This requires you create a new password item in macOS's Keychain with the
# name `vault` and the account `$USER`.

set -o errexit -o nounset -o pipefail

if test "$(perl -e 'print int ((-M $ARGV[0]) * 24)' -- ~/.vault-token)" -ge 4
then
    /usr/local/bin/vault login -method=userpass -path=ping username="$USER" password=$(security find-generic-password -l vault -a "$USER" -w) >/dev/null
fi

case "$1" in
    copy|cp)
        shift
        SRC="$1"
        shift
        DST="$1"
        shift
        exec vault read -format json "$SRC" | jq .data | vault write "$DST" -
        ;;
    *)
        exec /usr/local/bin/vault "$@"
        ;;
esac
